<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="WEB-INF/application.properties"></property>
		<property name="properties">
			<props>
				<prop key="mysql.url"></prop>
				<prop key="mysql.user"></prop>
				<prop key="mysql.password"></prop>
				<prop key="app.name"></prop>
			</props>
		</property>
	</bean>
	<bean id="app.name" class="java.lang.String" >
		<constructor-arg value="${app.name}"/>
	</bean>
</beans>