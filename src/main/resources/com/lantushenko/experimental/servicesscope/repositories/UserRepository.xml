<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lantushenko.experimental.servicesscope.repositories.UserRepository">
	<select id="findUserById" parameterType="java.lang.Integer">
		SELECT * FROM users WHERE id=#{id} 
	</select>

	<select id="findUserByLogin" parameterType="java.lang.Integer">
		SELECT * FROM users WHERE login=#{login} 
	</select>
	
	<insert id="insert" parameterType="UserImpl">
		INSERT INTO users(id, login, full_name, password) 
		VALUES(#{id}, #{login}, #{fullName}, #{password})
		<selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER" >
		   CALL IDENTITY();
		</selectKey>
	</insert>
	
	<update id="update" parameterType="UserImpl" >
		UPDATE users SET login=#{login}
		, full_name=#{fullName}
		, password=#{password}
		WHERE id = #{id}
	</update>
</mapper>